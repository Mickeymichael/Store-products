@model IEnumerable<Session4.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {

       var photoPath = "~/Images/" + (item.Image ?? "person.jpg");
      
        
        <div class="card m-3" style="min-width:18rem;max-width:30.5%">

           <div class="card-header">
               <h3>@item.Name</h3>
            
           </div>
            <div class="card-body">
                <img src="@photoPath" class="card-img-top imagethumbnail" asp-append-version="true">
               
            </div>
            <div class="card-footer text-center">

                <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-primary">Delete</a>

            </div>
       </div>

    }
</div>





