@model Session4.Models.Customer

@{
    ViewData["Title"] = "Details";

    var PhotoPath="~/Images/"+(Model.Image?? "person.jpg");
}


<div class="row justify-content-center m-5">

    <div  class="col-sm-8">


        <div class="card">

            <div class="card-header">
                <h1>@Model.Name</h1>

            </div>
            <div class="card-body text-center">

                <img  class="card-img-top" src="@PhotoPath" asp-append-version=true/>
                <h4>Customer Email:@Model.Email</h4>
                <h4>Customer Phone:@Model.Phone</h4>
                <h4>Address:@Model.Address</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Edit" asp-controller="Customer" asp-route-id="@Model.CustomerId" class="btn btn-primary" >Edit</a>
                <a asp-action="Index" class="btn btn-primary" >Back To List</a>
                <a asp-action="Delete" asp-route-id="@Model.CustomerId" class="btn btn-primary">Delete</a>
            </div>

        </div>

    </div>



</div>
